<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.ufrpe.isantos.trilhainterpretativa.PointActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="6dp">


        <Button
            android:id="@+id/btnOpenMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnOpenMap"
            android:onClick="openMap"
            android:textColor="@color/colorBtnFont"
            android:background="@color/colorBtn"/>


        <TextView
            android:id="@+id/tvDescPoint"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:text="" />

        <ImageView
            android:id="@+id/imgPoint"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            app:srcCompat="@drawable/cast_abc_scrubber_control_off_mtrl_alpha"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/btnBackMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:onClick="backToMap"
            android:text="Voltar"
            android:textColor="@color/colorBtnFont"
            android:background="@color/colorBtn"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
