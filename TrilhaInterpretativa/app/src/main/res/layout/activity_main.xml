<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.ufrpe.isantos.trilhainterpretativa.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <Button android:textColor="@color/colorBtnFont"
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnUpdate"
            android:onClick="updateData"
            android:background="@color/colorBtn"

             />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBtnFont"
            android:minHeight="8dp"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openMap"
            android:text="@string/btnStartTrail"
            android:textColor="@color/colorBtnFont"
            android:background="@color/colorBtn"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
