<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.ufrpe.isantos.trilhainterpretativa.UpdateActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/lastUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ultima Atualização:" />

        <EditText
            android:id="@+id/urlupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/colorBtnFont"/>

        <Button
            android:id="@+id/startUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="startUpdate"
            android:text="Atuaizar"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"

            android:textColor="@color/colorBtnFont"
            android:background="@color/colorBtn"/>

        <Button
            android:id="@+id/btnShowBase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnShowBase"

            android:onClick="showBase"
            android:background="@color/colorBtn"
            android:textColor="@color/colorBtnFont"/>

        <EditText
            android:id="@+id/etBaseConsole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:layout_weight="0.65"
           />

        <Button
            android:id="@+id/btnResetBase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnResetBase"
            android:onClick="resetBase"
            android:textColor="@color/colorBtnFont"
            android:background="@color/colorBtn"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
